<h1><%= "Rate this song!" %></h1>

<br>
<%= form_for (@rating) do |f| %>

  <%= f.hidden_field :song_id, :value => @rating.song_id %>
  <%= f.label :rating, "Rating (1-5):"%>
  <%= f.select(:rating, [5,4,3,2,1], {}, {:class=>"form-control"}) %>
  <%= f.submit :"Rate", class:"btn btn-primary"%>
<% end %>
<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %>
  <% end %>
  <% end %>
