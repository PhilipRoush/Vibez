<h1 class="signup">Sign Up</h1>

<p class="signup">Please enter a username and password!</p>

<div class="signup-form">
<%= form_for @user do |f| %>
  <%= f.label :username, "Username:", class: "signup" %>
  <%= f.text_field :username %><br><br>
  <%= f.label :password, "Password:", class: "signup" %>
  <%= f.password_field :password %><br><br>
  <%= f.label :password_confirmation, "Password Confirmation:", class: "signup" %>
  <%= f.password_field :password_confirmation %><br><br>
  <%= f.submit "Create New Account", class: "signup_btn"%>
<% end %>
<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %>
  <% end %>
<% end %>
</div>